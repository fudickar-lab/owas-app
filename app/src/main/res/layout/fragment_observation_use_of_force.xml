<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.observation.posture.ObservationUseOfForceFragment"
        android:id="@+id/fragment_use_of_force">

    <ImageButton
            android:src="@drawable/ic_weight_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonUseOfForceCode1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonUseOfForceCode2"
            />

    <ImageButton
            android:src="@drawable/ic_weight_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonUseOfForceCode2"
            app:layout_constraintStart_toEndOf="@+id/buttonUseOfForceCode1"
            app:layout_constraintTop_toTopOf="@+id/buttonUseOfForceCode1"
            app:layout_constraintBottom_toBottomOf="@+id/buttonUseOfForceCode1"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonUseOfForceCode3"
            />

    <ImageButton
            android:src="@drawable/ic_weight_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonUseOfForceCode3"
            app:layout_constraintStart_toEndOf="@+id/buttonUseOfForceCode2"
            app:layout_constraintTop_toTopOf="@+id/buttonUseOfForceCode2"
            app:layout_constraintBottom_toBottomOf="@+id/buttonUseOfForceCode2"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>