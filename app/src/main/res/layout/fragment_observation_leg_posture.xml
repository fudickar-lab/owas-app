<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.observation.posture.ObservationLegPostureFragment"
        android:id="@+id/fragment_leg_posture">

    <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonLegCode2"
            android:src="@drawable/ic_lower_2"
            app:layout_constraintBottom_toBottomOf="@+id/buttonLegCode1"
            app:layout_constraintTop_toTopOf="@+id/buttonLegCode1"
            app:layout_constraintStart_toEndOf="@+id/buttonLegCode1"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonLegCode3"
            android:layout_marginEnd="8dp"/>

    <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonLegCode3"
            android:src="@drawable/ic_lower_3"
            app:layout_constraintTop_toTopOf="@+id/buttonLegCode2"
            app:layout_constraintBottom_toBottomOf="@+id/buttonLegCode2"
            app:layout_constraintStart_toEndOf="@+id/buttonLegCode2"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonLegCode4"
            android:src="@drawable/ic_lower_4"
            app:layout_constraintStart_toStartOf="@+id/buttonLegCode1"
            app:layout_constraintEnd_toEndOf="@+id/buttonLegCode1"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonLegCode1"/>

    <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonLegCode5"
            android:src="@drawable/ic_lower_5"
            app:layout_constraintStart_toStartOf="@+id/buttonLegCode2"
            app:layout_constraintEnd_toEndOf="@+id/buttonLegCode2"
            app:layout_constraintTop_toBottomOf="@+id/buttonLegCode2"
            android:layout_marginTop="16dp"/>

    <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonLegCode6"
            android:src="@drawable/ic_lower_6"
            app:layout_constraintEnd_toEndOf="@+id/buttonLegCode3"
            app:layout_constraintStart_toStartOf="@+id/buttonLegCode3"
            app:layout_constraintTop_toBottomOf="@+id/buttonLegCode3"
            android:layout_marginTop="16dp"/>

    <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonLegCode7"
            android:src="@drawable/ic_lower_7"
            app:layout_constraintStart_toStartOf="@+id/buttonLegCode4"
            app:layout_constraintEnd_toEndOf="@+id/buttonLegCode4"
            app:layout_constraintTop_toBottomOf="@+id/buttonLegCode4"
            android:layout_marginTop="16dp"/>

    <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonLegCode1"
            android:src="@drawable/ic_lower_1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonLegCode2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>