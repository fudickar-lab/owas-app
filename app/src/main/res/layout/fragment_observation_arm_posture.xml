<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.observation.posture.ObservationArmPostureFragment"
        android:id="@+id/fragment_arm_posture">

    <ImageButton
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonArmCode1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="bottom"
            android:textColor="#888"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/imageButtonArmCode2"
            android:src="@drawable/ic_upper_1"
            android:layout_marginTop="32dp"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonArmCode2"
            android:src="@drawable/ic_upper_2"
            android:gravity="bottom"
            android:textColor="#888"
            app:layout_constraintTop_toTopOf="@+id/imageButtonArmCode1"
            app:layout_constraintStart_toEndOf="@+id/imageButtonArmCode1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_upper_3"
            android:gravity="bottom" app:layout_constraintEnd_toEndOf="@+id/imageButtonArmCode1"
            app:layout_constraintStart_toStartOf="@+id/imageButtonArmCode1"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonArmCode1" android:layout_marginTop="16dp"
            android:id="@+id/imageButtonArmCode3"/>

</androidx.constraintlayout.widget.ConstraintLayout>